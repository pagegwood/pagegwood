{% extends "layouts/base.twig" %}

{% block content %}
		<article class="Post Post--project paddingY3 paddingY5--sm" id="post-{{post.ID}}">
			<div class="Container">
				<img src="{{ post.desktopFeaturedImage().src }}" alt="{{post.title}}">
			</div>
			<div class="Container Container--small">
				<section class="Post-content">
					<h1 class="size-h1 font-primary color-text weight-medium marginB1">{{post.title}}</h1>
					<p class="blog-author font-secondary">
						{{ post.projectLaunchDate() }} available at {{ post.projectUrl() }}
					</p>

					<div class="Content paddingY3 paddingY5--sm">
						{{post.content}}
					</div>
					{% if post.tags %}
					<ul class="List List--horizontal Post-tags marginB3 marginB5--sm">
					{% for tag in post.tags %}
							<li>
								<a href="{{ tag.link }}" title="{{ tag.name }}" class="link size-h6 font-primary text-uppercase weight-semiBold link-color-six">{{ tag.name }}</a>
							</li>
					{% endfor %}
					</ul>
					{% endif %}
				</section>
				<section class="Post-footer">

				</section>
			</div>
		</article>
{% endblock %}
