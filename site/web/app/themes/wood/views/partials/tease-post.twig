<article class="Tease Tease--{{post.post_type}}{{ loop.last ? '' : ' border-bottom' }}" id="tease-{{post.ID}}">
	<h2 class="size-h2 weight-normal font-primary marginB1 link link-color-six">
		<a href="{{post.link}}">{{ post.title }}</a>
	</h2>
	<time datetime="{{ post.post_date }}" class="size-h6 font-secondary weight-light">{{ post.post_date|date("F d, Y") }}</time>
</article>
