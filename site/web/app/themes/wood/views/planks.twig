{% block header %}


{% endblock %}

{% block styles %}

{% for plank in planks %}
	{% if plank.style %}
		{% include plank.style %}
	{% endif %}
{% endfor %}

{% endblock %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			{% for plank in planks %}
				{% include plank.view %}
			{% endfor %}
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
